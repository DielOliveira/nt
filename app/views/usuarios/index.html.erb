<p id="notice"><%= notice %></p>

<h1>Listing Usuarios</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Email</th>
      <th>Senha</th>
      <th>Cadastro</th>
      <th>Datainclusao</th>
      <th>Flagativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.id %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.senha %></td>
        <td><%= usuario.cadastro.nomepessoa rescue nil%></td>
        <td><%= usuario.created_at %></td>
        <td><%= usuario.flagativo %></td>
        <!-- <td><%#= link_to 'Show', usuario %></td> -->
        <!-- <td><%#= link_to 'Edit', edit_usuario_path(usuario) %></td> -->

        <td>
          <%= link_to raw("<span class=\"glyphicon glyphicon-trash\"></span>Excluir"), 
            usuario_path(:id => usuario.id),
            class: "btn btn-default btn-sm",
            method: :delete %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

