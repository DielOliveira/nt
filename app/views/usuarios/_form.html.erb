<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>NewTIME | Log in</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link href="/assets/template/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->

  <link rel="stylesheet" href="/assets/template/font-awesome/font-awesome.min.css" rel="stylesheet">
  <!-- Ionicons -->
  <link rel="stylesheet" href="/assets/template/ionicons/ionicons.min.css" rel="stylesheet">
  <!-- Theme style -->
  <link rel="stylesheet" href="/assets/template/dist/css/AdminLTE.min.css" rel="stylesheet">
  <!-- iCheck -->
  <link rel="stylesheet" href="/assets/template/plugins/iCheck/square/blue.css">


</head>
<br>
<br>
<br>
<br>
<body class="hold-transition login-page">
<div class="row">
  <!-- left column -->
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Dados de Login</h3>
      </div>

<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  
  <% if @usuario.errors.any? %>
  
    <% @usuario.errors.full_messages.each do |msg| %>
        <%= msg %></br>
      <% end %>
     <% end %>
    </div>
  <% end %>    

<div class="box-body">
<div class="row mar-bot40">
  <div class="col-lg-4">
  </div>
  <div class="col-lg-4">

    <div class="form-group">
      <label>Login</label>
        <%if usuario_logado%>
          <%#= f.text_field :email, :class => 'form-control'%>
        <%else%>
          <%#= f.text_field :email, :class => 'form-control'%>
        <%end%>

        <input class="form-control" type="text" value="adm" name="usuario[email]" id="usuario_email" onblur="teste();" onkeypress="teste();" />
    </div>

  </div>
  <div class="col-lg-4">
  </div>
</div>
<br>
<div class="row mar-bot40">
  <div class="col-lg-4">
  </div>
  <div class="col-lg-4">
    <%= f.label :Senha %><br>
    <%#= f.password_field :senha, :class => 'form-control' %>
    <input class="form-control" type="password" name="usuario[senha]" id="usuario_senha" onblur="teste();" onkeypress="teste();" />
  </div>
  <div class="col-lg-4">
  </div>  
</div>
<br>
<div class="row mar-bot40">
  <div class="col-lg-4">
  </div> 
  <div class="col-lg-4" >
    <%= f.label :Confirmação_Senha %><br>
    <%#= f.password_field :descconfirmasenha, :class => 'form-control'  %>
     <input class="form-control" type="password" name="usuario[descconfirmasenha]" id="usuario_descconfirmasenha" onblur="teste();" onkeypress="teste();"/>
  </div>
  <div class="col-lg-4">
  </div>   
</div>

    <% if not usuario_logado %>
      <%= f.hidden_field :cadastro_id, :value => session[:cadastro_id]%>
    <%end%>
    <%= f.hidden_field :datainclusao, :value => Time.now%>
    <%= f.hidden_field :dataultimologin %>
    <%= f.hidden_field :flagativo, :value => true%>
  <br>
  <div align="center">
    <button type="submit" class="btn btn-success btn-bg">
      <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
    </button>
  </div>

<% end %>

        </div>
      </div>
    </div>
  </div>
</body>



<script type="text/javascript">

function teste (){
    $('#usuario_email').val(jQuery('#usuario_email').val().toLowerCase());
    $('#usuario_senha').val(jQuery('#usuario_senha').val().toLowerCase());
    $('#usuario_descconfirmasenha').val(jQuery('#usuario_descconfirmasenha').val().toLowerCase());
  };

</script>
