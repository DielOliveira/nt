<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  
  <% if @usuario.errors.any? %>
  
    <% @usuario.errors.full_messages.each do |msg| %>
        <%= msg %></br>
      <% end %>
     <% end %>
    </div>
  <% end %>    

<div class="row mar-bot40">
  <div class="col-lg-4">
  </div>
  <div class="col-lg-4">
    <%#= f.label :Email %><br>
    <%#= f.text_field :email, :class => 'form-control' %>

    <div class="form-group">
      <label>E-mail</label>
      <input name="usuario[email]" id="usuario_email" type="text" class="form-control" value="<%=user.cadastro.email%>"  disabled>
    </div>

  </div>
  <div class="col-lg-4">
  </div>
</div>
<br>
<div class="row mar-bot40">
  <div class="col-lg-4">
  </div>
  <div class="col-lg-4">
    <%= f.label :Senha %><br>
    <%= f.password_field :senha, :class => 'form-control' %>
  </div>
  <div class="col-lg-4">
  </div>  
</div>
<br>
<div class="row mar-bot40">
  <div class="col-lg-4">
  </div> 
  <div class="col-lg-4" >
    <%= f.label :Confirmação_Senha %><br>
    <%= f.password_field :descconfirmasenha, :class => 'form-control'  %>
  </div>
  <div class="col-lg-4">
  </div>   
</div>

  <div class="field">
    <%= f.hidden_field :cadastro_id, :value => session[:cadastro_id] %>
  </div>
  <div class="field">
    <%= f.hidden_field :datainclusao, :value => Time.now%>
  </div>
  <div class="field">
    <%= f.hidden_field :dataultimologin %>
  </div>
  <div class="field">
    <%= f.hidden_field :flagativo, :value => true%>
  </div>
  <br>
  <div align="center">
    <button type="submit" class="btn btn-success btn-bg">
      <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
    </button>
  </div>

<% end %>
