<%=session[:cadastro_id]%>
<div class="progress">
  <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%;">
    90%
  </div>
</div>

<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row mar-bot40">
  <div class="col-lg-4">
  </div>
  <div class="col-lg-4">
    <%= f.label :Email %><br>
    <%= f.text_field :email, :class => 'form-control' %>
  </div>
  <div class="col-lg-4">
  </div>
</div>
<br>
<div class="row mar-bot40">
  <div class="col-lg-4">
  </div>
  <div class="col-lg-4">
    <%= f.label :Senha %><br>
    <%= f.text_field :senha, :class => 'form-control' %>
  </div>
  <div class="col-lg-4">
  </div>  
</div>
<br>
<div class="row mar-bot40">
  <div class="col-lg-4">
  </div> 
  <div class="col-lg-4" >
    <%= f.label :Confirmação_Senha %><br>
    <%= f.password_field :descconfirmasenha, :class => 'form-control'  %>
  </div>
  <div class="col-lg-4">
  </div>   
</div>

  <div class="field">
    <%= f.hidden_field :cadastro_id, :value => session[:cadastro_id] %>
  </div>
  <div class="field">
    <%= f.hidden_field :datainclusao, :value => Time.now%>
  </div>
  <div class="field">
    <%= f.hidden_field :dataultimologin %>
  </div>
  <div class="field">
    <%= f.hidden_field :flagativo, :value => true%>
  </div>
  <br>
  <div align="center">
    <button type="submit" class="btn btn-success btn-bg">
      <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
    </button>
  </div>

<% end %>
