<% flash.each do |name, msg| -%>
<div class="alert alert-warning alert-dismissible fade in" role="alert">
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <%= msg%>
</div>      
<% end -%>

<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Controle</h3>

    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
      </button>
      <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">

    <%= form_tag nil, method: 'GET', :id  => "busca" do %>

      <div class="col-md-1">
        <label for="nomepessoa">De</label>
        <input type="text" name="inicio" id="inicio" class="form-control" value="">
      </div>
      <div class="col-md-1">
        <label for="nomepessoa">At√©</label>
        <input type="text" name="final" id="final" class="form-control" value="">
      </div>      

    </div>
  </div>

      <div class="box-footer clearfix">
        <button  class="btn btn-md btn-success pull-right" type="submit" >Gerar</button>
      </div>

    <% end %>

</div>

<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Total <%=@obrigacaos.count%></h3>

    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
      </button>
      <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Cadastro</th>
          <th>Numero</th>
          <th>Efetivado</th>
          <th ></th>
        </tr>
      </thead>

      <tbody>
        <% @obrigacaos.each do |obrigacao| %>
          <tr>
            <td><%= obrigacao.cadastro.nomepessoa %></td>
            <td><%= obrigacao.cadastro.contador %></td>
            <td>
              <%if obrigacao.flagrealizado%>
                <span class="badge bg-green "><span class="glyphicon glyphicon-ok"></span></span>
              <%else%>
                <span class="badge bg-red"><span class="glyphicon glyphicon-remove"></span></span>
              <%end%>             
            </td>
            <%#= link_to 'Edit', edit_obrigacao_path(obrigacao) %>
            <td align="right">

              <% if obrigacao.cadastro_adicionado_id.blank?%>
                <%= link_to obrigacaodelete_path(obrigacao.id), :class => "btn btn-default btn-sm" do %>
                <span class="glyphicon glyphicon-trash"></span> Excluir
                <% end %>           
              <%end%>
              
            </td>
            
          </tr>
        <% end %>
      </tbody>
    </table>

    </div>
  </div>
</div>

