<div class="box box-warning">
    <div class="box-header with-border">
      <h4 class="timeline-header"><a href="#">Reentradas</a></h4>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
        </button>
      </div>
      <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body">

      <table class="table table-hover">
        <thead>
          <tr>
            <th >Login</th>
            <th >Ciclo</th>
            <th >Reentradas</th>
            <th >Doacoes Recebidas</th>
            <th ></th>
          </tr>
        </thead>

        <tbody>
          <% obrigacoes.each do |reentrada| %>
            <tr>
              <td><%=reentrada.cadastro_adicionado.email%></td>
              <td ><span class="badge bg-green"><%=reentrada.cadastro_adicionado.ciclo.numerociclo%></span></td>
              <td ><span class="badge bg-green"><%=reentradasCicloAtual(reentrada.cadastro_adicionado.id)%></span></td>
              <td ><span class="badge bg-green"><%=doacaoesRecebidasCicloAtualCount(reentrada.cadastro_adicionado.id)%></span></td>
              <td align='right'>
                <% if reentrada(reentrada.cadastro_adicionado_id) == 'opcional' %>
                  <div class="btn-group">
                    <%#= link_to novareentrada_path(reentrada.cadastro_adicionado_id), :class => "btn btn-success btn-sm" do %>
                       <!-- Reentrada Opcional -->
                    <%# end %>   
                  </div>               
                <% else %>   
                  <div class="btn-group">
                    <%= link_to novareentrada_path(reentrada.cadastro_adicionado_id), :class => "btn btn-danger btn-sm" do %>
                       Reentrada Obrigatorio
                    <% end %>   
                  </div>               
                <% end %>                
                <% if upgrade(reentrada.cadastro_adicionado_id) == 'opcional' %>
                  <div class="btn-group">
                    <%#= link_to upgrade_ciclo_path(reentrada.cadastro_adicionado_id), :class => "btn btn-success btn-sm" do %>
                       <!-- Upgrade Opcional -->
                    <%# end %>   
                  </div>               
                <% else %>   
                  <div class="btn-group">
                    <%= link_to upgrade_ciclo_path(reentrada.cadastro_adicionado_id), :class => "btn btn-danger btn-sm" do %>
                       Upgrade Obrigatorio
                    <% end %>   
                  </div>               
                <% end %>     
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="timeline-footer">
      </div>              
    </div>
    <!-- /.box-body -->
</div> 