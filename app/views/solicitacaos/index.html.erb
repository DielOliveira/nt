<p id="notice"><%= notice %></p>

<div class="box box-warning">
    <div class="box-header with-border">
      <h4 class="timeline-header"><a href="#">Solicitações</a></h4>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
        </button>
      </div>
      <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body">

<table class="table table-hover">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Situacaodemanda</th>
      <th>Dataprevisao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solicitacaos.each do |solicitacao| %>
      <tr>
        <td><%= solicitacao.titulo %></td>
        <td><%= solicitacao.descricao %></td>
        <td><%= solicitacao.situacaodemanda.descricao rescue nil %></td>
        <td><%= solicitacao.dataprevisao %></td>
        <td align="right">
          <%= link_to solicitacao, :class => "btn btn-default btn-sm" do %>
            <span class="glyphicon glyphicon-list-alt"></span> Exibir
          <% end %>         
          <%= link_to edit_solicitacao_path(solicitacao), :class => "btn btn-default btn-sm" do %>
            <span class="glyphicon glyphicon-pencil"></span> Editar
          <% end %>       
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>

    </div>
  </div>

<%= link_to new_solicitacao_path, :class => "btn btn-success btn-bg" do %>
     <span class="glyphicon glyphicon-file"></span>Nova Solicitação
<% end %>
