<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Dossiê de <%=@cadastro.nomepessoa%></h3>

    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
      </button>
      <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <div class="table-responsive">
    <h3> Dados Pessoais </h3>
    <p>
      <strong>Nome da Pessoa:</strong>
      <%= @cadastro.nomepessoa %>
    </p>

    <p>
      <strong>CPF:</strong>
      <%= @cadastro.cpf %>
    </p>

    <p>
      <strong>Sexo:</strong>
      <%=@cadastro.masculino == true ? 'Masculino' : 'Feminino'%>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @cadastro.email %>
    </p>

    <p>
      <strong>Telefone:</strong>
      <%= @cadastro.telefone %>
    </p>

    <p>
      <strong>Operadora:</strong>
      <%= @cadastro.operadora.nomeoperadora %>
    </p>

    <p>
      <strong>Dadatainclusao:</strong>
      <%= @cadastro.dadatainclusao.blank? ? '' : @cadastro.dadatainclusao.strftime("%d/%m/%Y - %H:%M")%>
    </p>

    <h3>Dados Financeiros</h3>

    <p>
      <strong>Nomedo Titular:</strong>
      <%= @dadosfinanceiro.nometitular %>
    </p>

    <p>
      <strong>PicPay:</strong>
      <%= @dadosfinanceiro.contapicpay %>
    </p>

    <p>
      <strong>Conta Secundaria:</strong>
      <%= @dadosfinanceiro.observacao %>
    </p>

    <h3>Informações de Login</h3>

    <p>
      <strong>Usuario:</strong>
      <%= @usuario.email %>
    </p>

    <p>
      <strong>Senha:</strong>
      <%= @usuario.senha %>
    </p>

    <h3>Informações de Rede</h3>

    <p>
      <strong>Ciclo Atual:</strong>
      <%= @cadastro.ciclo_id %>
    </p>

    <p>
      <strong>Qtd Reentradas:</strong>
      <%= @reentradas.count %>
    </p>

    <p>
      <strong><%=link_to doacoesrecebidas_path(@cadastro.id) do%>Doações Recebidas:<%end%></strong>
      <%= @doacoesrecebdiasQtd %>
    </p>

    <p>
      <strong><%=link_to doacoesrealizadas_path(@cadastro.id) do%>Doações Realizadas:<%end%></strong>
      <%= @doacoesrealizadasQtd %>
    </p>    

    <p>
      <strong>Doações a Receber:</strong>
      <%= @doacaospendentesreceber %>
    </p>

    <p>
      <strong>Doações a Pagar:</strong>
      <%= @doacaospendentespagar %>
    </p>         

    <p>
      <strong>Patrocinador:</strong>
      <%= @patrocinador.first.cadastro_1.nomepessoa  rescue nil%>
    </p>             

    </div>
  </div>
</div>