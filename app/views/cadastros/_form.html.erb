<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>NewTIME | Log in</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link href="/assets/template/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->

  <link rel="stylesheet" href="/assets/template/font-awesome/font-awesome.min.css" rel="stylesheet">
  <!-- Ionicons -->
  <link rel="stylesheet" href="/assets/template/ionicons/ionicons.min.css" rel="stylesheet">
  <!-- Theme style -->
  <link rel="stylesheet" href="/assets/template/dist/css/AdminLTE.min.css" rel="stylesheet">
  <!-- iCheck -->
  <link rel="stylesheet" href="/assets/template/plugins/iCheck/square/blue.css">


</head>
<br>
<br>
<br>
<br>

<body class="hold-transition login-page">
<div class="row">
  <!-- left column -->
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Dados de Login</h3>
      </div>


        <%= form_for @cadastro, html: { multipart: true } do |f| %>
          <% if @cadastro.errors.any? %>
            <div class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          
          <% if @cadastro.errors.any? %>
          
            <% @cadastro.errors.full_messages.each do |msg| %>
                <%= msg %></br>
              <% end %>
             <% end %>
            </div>
          <% end %>   

      <div class="box-body">

            <%if not usuario_logado%>
                <div class="row mar-bot40">
                  <div class="col-lg-4">
                    <%= f.label :Login_do_Patrocinador %><br>
                    <%if session[:login]%>
                      <%= f.text_field :cpfpadrinho,:class => 'form-control', :value => session[:login], :readonly => true %>
                    <%else%>
                      <%= f.text_field :cpfpadrinho,:class => 'form-control' %>
                    <%end%>            
                  </div>
                </div>
                <br>
            <%end%>  
        <div class="row mar-bot40">
          <div class="col-lg-6">
            <%= f.label :Nome %><br>
            <%= f.text_field :nomepessoa,:class => 'form-control' %>
          </div>
          <div class="col-lg-4">
            <%= f.label :CPF %><br>
            <%if usuario_logado%>
                <%= f.text_field :cpf,:class => 'form-control'%>
            <%else%>
                <%= f.text_field :cpf,:class => 'form-control' %>
            <%end%>            
          </div>  
          <div class="col-lg-2">

                  <div class="radio">
                    <label>
                      <input type="radio" name="cadastro[masculino]" id="cadastro_masculino" value="1" <%= @cadastro.masculino == true ? 'checked = "checked"' : '' %>>
                      Masculino
                    </label>
                  </div>
                  <div class="radio">
                    <label>
                      <input type="radio" name="cadastro[masculino]" id="cadastro_masculino" value="0" <%= @cadastro.masculino == false ? 'checked = "checked"' : '' %>>
                      Feminino
                    </label>
                  </div>          

          </div>



        </div>
        <br>
        <div class="row mar-bot40">
          <div class="col-lg-4">
            <%= f.label :Email %><br>
            <%= f.text_field :email, :class => 'form-control' %>
          </div>

          <div class="col-lg-4">
            <%= f.label :Confirma_Email %><br>
              <%= f.text_field :descconfirmaemail, :class => 'form-control' %>
          </div>

          <div class="col-lg-4">
            <%= f.label :Telefone %><br>
            <%= f.text_field :telefone, :class => 'form-control' %>
          </div>
        </div>
        <br>
        <div class="row mar-bot40">
          <div class="col-lg-4">
            <%= f.label :Operadora %><br>
            <%= f.select :operadora_id, options_from_collection_for_select(Operadora.all, 'id', 'nomeoperadora', @cadastro.operadora_id), {:include_blank => true}, {:class => 'form-control' } %>
          </div>
          <div class="col-lg-4">
            <%= f.label :Whatsapp %><br>
            <%= f.text_field :whatsapp, :class => 'form-control'%>
          </div>
          <div class="col-lg-4">
            <%= f.label :Facebook %><br>
            <%= f.text_field :facebook, :class => 'form-control'  %>
          </div>
        </div>
          <div class="field">
            
            <%if not @cadastro.id%>
              <%= f.hidden_field :flagativo, :value => false%>
              <%= f.hidden_field :dadatainclusao, :value => Time.now%>
              <%= f.hidden_field :ciclo_id, :value => 1%>
              <%= f.hidden_field :flagreentrada, :value => false%>
              <%= f.hidden_field :contador, :value => Cadastro.where('flagreentrada = false').count + 1%>
            <%end%>
              <%= f.text_field :ciclo_id%>

          </div>
          <br>
          <div align="right">
      
          <%if not usuario_logado%>

              <%= link_to root_path, :class => "btn btn-info btn-bg" do %>
                <span class="glyphicon glyphicon-arrow-left"></span> Voltar
              <% end %>      

          <%end%>
            <button type="submit" class="btn btn-success btn-bg">
              <span class="glyphicon glyphicon-arrow-right"></span> Salvar
            </button>

          </div>

        <% end %>

    </div>
    <!-- /.box -->
  </div>
</div></div>
</body>

