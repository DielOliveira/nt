<%require 'carrierwave/orm/activerecord'%>
<%= form_for @cadastro, html: { multipart: true } do |f| %>
  <% if @cadastro.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  
  <% if @cadastro.errors.any? %>
  
    <% @cadastro.errors.full_messages.each do |msg| %>
        <%= msg %></br>
      <% end %>
     <% end %>
    </div>
  <% end %>   


<div class="row mar-bot40">
  <div class="col-lg-4">
    <%= f.label :CPF_do_Padrinho %><br>
    <%= f.text_field :cpfpadrinho,:class => 'form-control' %>
  </div>
</div>
<br>
<div class="row mar-bot40">
  <div class="col-lg-6">
    <%= f.label :Nome %><br>
    <%= f.text_field :nomepessoa,:class => 'form-control' %>
  </div>
  <div class="col-lg-4">
    <%= f.label :CPF %><br>
    <%= f.text_field :cpf,:class => 'form-control' %>
  </div>  
  <div class="col-lg-2">
    <%= f.label :Masculino %><br>
    <%= f.check_box :masculino %>
  </div>
</div>
<br>
<div class="row mar-bot40">
  <div class="col-lg-6">
    <%= f.label :Email %><br>
    <%= f.text_field :email, :class => 'form-control' %>
  </div>
  <div class="col-lg-3">
    <%= f.label :Telefone %><br>
    <%= f.text_field :telefone, :class => 'form-control' %>
  </div>
  <div class="col-lg-3">
    <%= f.label :Operadora %><br>
    <%= f.select :operadora_id, options_from_collection_for_select(Operadora.all, 'id', 'nomeoperadora', @cadastro.operadora_id), {:include_blank => true}, {:class => 'form-control' } %>
  </div>
</div>
<br>
<div class="row mar-bot40">
  <div class="col-lg-4">
    <%= f.label :Whatsapp %><br>
    <%= f.text_field :whatsapp, :class => 'form-control'%>
  </div>
  <div class="col-lg-4">
    <%= f.label :Skype %><br>
    <%= f.text_field :skype, :class => 'form-control'  %>
  </div>
  <div class="col-lg-4">
    <%= f.label :Facebook %><br>
    <%= f.text_field :facebook, :class => 'form-control'  %>
  </div>
</div>
  <div class="field">
    <%= f.hidden_field :dadatainclusao, :value => Time.now%>
  </div>
  <br>
  <div align="right">
    <button type="submit" class="btn btn-success btn-bg">
      <span class="glyphicon glyphicon-arrow-right"></span> Salvar
    </button>
  </div>

  <%= image_tag(@cadastro.avatar_url) if @cadastro.avatar? %>
  <%= f.file_field :avatar %>


<% end %>
