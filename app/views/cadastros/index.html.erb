<% title "Listando Cadastros" %>

<!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Cadastros</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Nome</th>
                      <th>Sexo</th>
                      <th>E-mail</th>
                      <th>Telefone</th>
                      <th>Dadata de Inclusao</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @cadastros.each do |cadastro| %>
                      <tr>
                        <td><%= cadastro.nomepessoa %></td>
                            <% if cadastro.masculino %>
                              <td>Masculino</td>
                            <%else%>
                              <td>Feminino</td>
                            <%end%>
                        <td><%= cadastro.email %></td>
                        <td><%= cadastro.telefone %></td>
                        <td><%= cadastro.dadatainclusao.blank? ? '' : cadastro.dadatainclusao.strftime("%d/%m/%Y - %H:%M")%></td>
<!-- 
                          <td align='right'>
                              <%#= link_to redeslist_path(cadastro), :class => "btn btn-default btn-sm" do %>
                                <span class="glyphicon glyphicon-sort-by-attributes-alt"></span> Rede
                              <%# end %>
                              <%#= link_to cadastro, :class => "btn btn-default btn-sm" do %>
                                <span class="glyphicon glyphicon-list-alt"></span> Exibir
                              <%# end %>                              
                              <%#= link_to edit_cadastro_path(cadastro), :class => "btn btn-default btn-sm" do %>
                                <span class="glyphicon glyphicon-pencil"></span> Editar
                              <%# end %>             
                              <%#= link_to cadastro , :method => :delete,  :confirm => 'Deseja excluir o registro?', :class => "btn btn-default btn-sm" do %>
                                <span class="glyphicon glyphicon-trash"></span> Excluir
                              <%# end %>            
                          </td>            -->       
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>                
<br>

  <script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>