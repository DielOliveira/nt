<% title "Listando Operadoras" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome da Operadora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operadoras.each do |operadora| %>
      <tr>
        <td><%= operadora.nomeoperadora %></td>

        <td align='right'>
          <div class="btn-group">
            <%#= link_to fd_produto, :class => "btn btn-default btn-sm" do %>
            <!--  <span class="glyphicon glyphicon-list-alt"></span> Exibir -->
            <%# end %>             
            <%= link_to edit_operadora_path(operadora), :class => "btn btn-default btn-sm" do %>
              <span class="glyphicon glyphicon-pencil"></span> Editar
            <% end %>             
            <%= link_to operadora , :method => :delete,  :confirm => 'Deseja excluir o registro?', :class => "btn btn-default btn-sm" do %>
              <span class="glyphicon glyphicon-trash"></span> Excluir
            <% end %>            
          </div>
        </td>
                  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_operadora_path, :class => "btn btn-default btn-sm" do %>
     <span class="glyphicon glyphicon-file"></span>Novo
<% end %>
