<% title "Listando Cadastros por linha" %>


  <table class="table table-hover">
      <thead>
        <tr>
          <th>Count</th>
          <th>id_rede</th>
          <th>parent_id</th>
          <th>id_usuario</th>
          <th>ordem</th>
          <th>nome</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <%count = 0%>
        <% @redes.each do |rede| %>

          <tr>
            <td><%= count = count + 1 %></td>
            <td><%= rede.id %></td>
            <td><%= rede.parent_id %></td>
            <td><%= rede.cadastro.id rescue nil %></td>
            <td><%= rede.ordem rescue nil %></td>
            <td><%= rede.cadastro.nomepessoa rescue nil %></td>
            <%if not rede.cadastro.blank? %>
              <%if not rede.cadastro.flagativo%>
                <%= link_to raw("<span class=\"glyphicon glyphicon-trash\"></span>Excluir"), 
                  cadastro_path(:id => rede.cadastro.id),
                  class: "btn btn-default btn-sm",
                  method: :delete %>
              <%end%>
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table>
        
<br>
